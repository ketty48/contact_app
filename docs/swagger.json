      "type": "object",
      "properties": {
        "firstName": {
          "type": "string"
        },
        "lastName": {
          "type": "string"
        },
        "email": {
          "type": "string"
        },
        "address": {
          "type": "string"
        },
        "phone": {
          "type": "string",
          "unique": true
        },
        "workPhone": {
          "type": "string",
          "unique": true
        }
      },
      "required": ["firstName","lastName", "email", "address", "phone", "workPhone"]
    }
  }
