{
  "swagger": "2.0",
  "info": {
    "title": "Contact API",
    "description": "API documentation for contact CRUD operations",
    "version": "1.0.0"
  },
  "host": "localhost:3000",
  "basePath": "",
  "schemes": ["http", "https"],
  "paths": {
    "/contact/createContact": {
      "post": {
        "summary": "Create a new contact",
        "description": "Create a new contact",
        "tags": ["Contacts"],
        "parameters": [
          {
            "in": "body",
            "name": "body",
            "schema": {
              "$ref": "#/definitions/contact"
            },
            "required": true,
            "description": "Contact object"
          }
        ],
        "responses": {
          "201": {
            "description": "Contact created"
          }
        }
      }
    },
    "/contact/getAll": {
      "get": {
        "summary": "Get all contacts",
        "description": "Get all contacts",
        "tags": ["Contacts"],
        "responses": {
          "200": {
            "description": "Contact fetched successfully",
            "schema": {
              "type": "array",
              "items": {
                "$ref": "#/definitions/contact"
              }
            }
          }
        }
      }
    },
    "/contact/{id}": {
      "put": {
        "summary": "Update a contact by ID",
        "description": "Update a contact by ID",
        "tags": ["Contacts"],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "ID of the contact to update",
            "required": true,
            "type": "string"
          },
          {
            "in": "body",
            "name": "body",
            "schema": {
              "$ref": "#/definitions/contact"
            },
            "required": true,
            "description": "Updated contact object"
          }
        ],
        "responses": {
          "200": {
            "description": "Contact updated"
          },
          "404": {
            "description": "Contact not found"
          }
        }
      },
      "delete": {
        "summary": "Delete a contact by ID",
        "description": "Delete a contact by ID",
        "tags": ["Contacts"],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "ID of the contact to delete",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "204": {
            "description": "Contact deleted"
          },
          "404": {
            "description": "Contact not found"
          }
        }
      },
      "get": {
        "summary": "Get a contact by ID",
        "description": "Get a contact by ID",
        "tags": ["Contacts"],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "ID of the contact to retrieve",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "Successful response"
          },
          "404": {
            "description": "Contact not found"
          }
        }
      }
    },
    "/contact/search": {
      "get": {
        "summary": "Search for a contact by email or phone",
        "description": "Search for a contact by email or phone",
        "tags": ["Contacts"],
        "parameters": [
          {
            "name": "email",
            "in": "query",
            "description": "Email of the contact to retrieve",
            "required": false,
            "type": "string"
          },
          {
            "name": "phone",
            "in": "query",
            "description": "Phone of the contact to retrieve",
            "required": false,
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "Successful response",
            "schema": {
              "type": "array",
              "items": {
                "$ref": "#/definitions/contact"
              }
            }
          }
        }
      }
    }
